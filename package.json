{
  "name": "electron-react-overlay",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "main": "dist/electron-main.cjs",
  "scripts": {
    "dev": "concurrently -k \"vite\" \"wait-on http://localhost:5173 && cross-env VITE_DEV_SERVER_URL=http://localhost:5173 electron .\"",
    "vite": "vite",
    "electron": "cross-env VITE_DEV_SERVER_URL=http://localhost:5173 electron .",
    "build": "vite build && tsc -p tsconfig.main.json && electron-builder -c.extraMetadata.main=dist/electron-main.js",
    "start": "electron ."
  },
  "dependencies": {
    "electron": "^31.3.0",
    "lucide-react": "^0.460.0",
    "onnxruntime-web": "^1.22.0",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "zustand": "^4.5.5"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.13",
    "@types/node": "^20.14.12",
    "@types/react": "^19.0.3",
    "@types/react-dom": "^19.0.2",
    "@vitejs/plugin-react": "^4.3.3",
    "autoprefixer": "^10.4.21",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron-builder": "^24.13.3",
    "postcss": "^8.4.47",
    "tailwindcss": "4.1.12",
    "typescript": "5.8.3",
    "vite": "7.0.4",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "br.com.psicolmeia.overlay",
    "productName": "Psicolmeia Overlay",
    "files": [
      "dist/**",
      "node_modules/**",
      "package.json"
    ],
    "extraResources": [],
    "mac": {
      "category": "public.app-category.productivity",
      "target": [
        "dmg",
        "zip"
      ]
    },
    "win": {
      "target": [
        "nsis",
        "zip"
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ]
    }
  }
}
